{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.e2e.json"
    }
  },
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }

}
